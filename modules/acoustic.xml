<?xml version="1.0"?>
<module>
    <general id ="acoustic" name="Acoustic">
        <description>Acoustics is the interdisciplinary science that deals with the study of all mechanical waves in gases, liquids, and solids.</description>
        <properties steadystate="0" harmonic="1" transient="0" />    
    </general>
    
    <constants>
        <item id="P0" value="20e-6" />
    </constants>    

    <localvariable>
        <item id="acoustic_pressure_real" name="Pressure - real" shortname="p" unit="Pa" scalar="1">
            <harmonic planar_scalar="value1" axi_scalar="value1" />
            <transient />
        </item>
        <item id="acoustic_pressure_imag" name="Pressure - imag" shortname="p" unit="Pa" scalar="1">
            <harmonic planar_scalar="value2" axi_scalar="value2" />
            <transient />
        </item>
        <item id="acoustic_pressure_level" name="Pressure level" shortname="SPL" unit="dB" scalar="1">
            <harmonic planar_scalar="value1" axi_scalar="20 * log10(sqrt(value1 * value1 + value2 * value2) / P0)" />
            <transient />
        </item>        
        <item id="acoustic_local_acceleration" name="Local acceleration" shortname="a" unit="m/s2">
            <harmonic planar_comp_x="- dx1 / rho" planar_comp_y="- dy1 / rho" axi_comp_r="- dx1 / rho" axi_comp_z="- dy1 / rho" />
            <transient />
        </item>
        <item id="acoustic_density" name="Mass density" shortname="rho" unit="kg/m3" scalar="1">
            <harmonic planar_scalar="rho" axi_scalar="rho" />
            <transient />
        </item>
        <item id="acoustic_speed" name="Speed of sound" shortname="v" unit="m/s" scalar="1">
            <harmonic planar_scalar="v" axi_scalar="v" />
            <transient />
        </item>  
    </localvariable>

    <view>
        <scalarvariable>
            <harmonic default="acoustic_pressure_real">
                <item id="acoustic_pressure_real" />
                <item id="acoustic_pressure_imag" />
                <item id="acoustic_pressure_level" />
                <item id="acoustic_local_acceleration" />
                <item id="acoustic_density" />
                <item id="acoustic_speed" />
            </harmonic>
            <transient/>
        </scalarvariable>

        <vectorvariable>
            <harmonic default="acoustic_local_acceleration"/>
                <item id="acoustic_local_acceleration" />
            <transient/>
        </vectorvariable>
    </view>
    
    <pointvalue>
        <harmonic>
            <item id="acoustic_pressure_real" />
            <item id="acoustic_pressure_imag" />
            <item id="acoustic_pressure_level" />
            <item id="acoustic_local_acceleration" />       
            <item id="acoustic_density" />
            <item id="acoustic_speed" />  
        </harmonic>            
        <transient/>
    </pointvalue>  
    
    <volumeintegral>
        <item id="volume" name="Volume" shortname="V" unit="m3">
            <harmonic planar="1.0" axi="2.0 * PI * x" />
            <transient/>
        </item>        
        <item id="surface" name="Cross section" shortname="S" unit="m2">
            <harmonic planar="1.0" axi="1.0" />
            <transient/>
        </item>
    </volumeintegral>    
    
    <surfaceintegral>
        <item id="length" name="Length" shortname="l" unit="m">
            <harmonic planar="1.0" axi="1.0" />
            <transient/>
        </item>        
        <item id="surface" name="Surface" shortname="S" unit="m2">
            <harmonic planar="1.0" axi="2.0 * PI * x" />
            <transient/>
        </item>
    </surfaceintegral> 
</module>
