<?xml version="1.0"?>
<module>
    <general>
        <name>Electrostatics</name>
        <description>Electrostatics is the branch of science that deals with the phenomena and properties of stationary or slow-moving (without acceleration) electric charges.</description>
        <properties steadystate="1" harmonic="0" transient="0" />    
    </general>

    <variables>
        <variable id="electrostatic_potential" name="Scalar potential" shortname="V" unit="V" scalar="1">
            <steadystate planar_scalar="value" axi_scalar="value" />
            <harmonic />
            <transient />
        </variable>
        <variable id="electrostatic_electric_field" name="Electric field" shortname="E" unit="V/m" scalar="0">
            <steadystate planar_comp_x="- dx" planar_comp_y="- dy" axi_comp_r="- dx" axi_comp_z="- dy" />
            <harmonic />
            <transient />
        </variable>
        <variable id="electrostatic_displacement" name="Displacement" shortname="D" unit="C/m2" scalar="0">
            <steadystate planar_comp_x="- epsr * EPS0 *  * dx" planar_comp_y="- epsr * EPS0 * dy" axi_comp_r="- epsr * EPS0 * dx" axi_comp_z="- epsr * EPS0 * dy" />
            <harmonic />
            <transient />
        </variable>
        <variable id="electrostatic_energy_density" name="Energy density" shortname="we" unit="J/m3" scalar="1">
            <steadystate planar_scalar="0.5 * epsr * EPS0 * (dx * dx + dy * dy)" axi_scalar="0.5 * epsr * EPS0 * (dx * dx + dy * dy)" />
            <harmonic />
            <transient />
        </variable>
        <variable id="electrostatic_permittivity" name="Permittivity" shortname="eps" unit="-" scalar="1">
            <steadystate planar_scalar="epsr" axi_scalar="epsr" />
            <harmonic />
            <transient />
        </variable>
        <variable id="electrostatic_charge_density" name="Charge density" shortname="rho" unit="C/m3" scalar="1">
            <steadystate planar_scalar="rho" axi_scalar="rho" />
            <harmonic />
            <transient />
        </variable>      
    </variables>

    <view>
        <scalarvariable>
            <steadystate default="electrostatic_potential">
                <item id="electrostatic_potential" />
                <item id="electrostatic_electric_field" />
                <item id="electrostatic_displacement" />
                <item id="electrostatic_energy_density" />
                <item id="electrostatic_permittivity" />
                <item id="electrostatic_charge_density" />
            </steadystate>
            <harmonic/>
            <transient/>
        </scalarvariable>

        <vectorvariable>
            <steadystate default="electrostatic_electric_field">
                <item id="electrostatic_electric_field" />
                <item id="electrostatic_displacement" />
            </steadystate>
            <harmonic/>
            <transient/>
        </vectorvariable>
    </view>
    
    <localvariable>
        <steadystate>
            <item id="electrostatic_potential" />
            <item id="electrostatic_electric_field" />
            <item id="electrostatic_displacement" />
            <item id="electrostatic_energy_density" />
            <item id="electrostatic_permittivity" />
            <item id="electrostatic_charge_density" />            
        </steadystate>
        <harmonic/>
        <transient/>
    </localvariable>    
</module>
