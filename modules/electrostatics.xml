<?xml version="1.0"?>
<module>
    <general>
        <name>Electrostatics</name>
        <description>Electrostatics is the branch of science that deals with the phenomena and properties of stationary or slow-moving (without acceleration) electric charges.</description>
        <properties steadystate="1" harmonic="0" transient="0" />    
    </general>

    <localvariable>
        <item id="electrostatics_potential" name="Scalar potential" shortname="V" unit="V" scalar="1">
            <steadystate planar_scalar="value" axi_scalar="value" />
            <harmonic />
            <transient />
        </item>
        <item id="electrostatics_electric_field" name="Electric field" shortname="E" unit="V/m" scalar="0">
            <steadystate planar_comp_x="- dx" planar_comp_y="- dy" axi_comp_r="- dx" axi_comp_z="- dy" />
            <harmonic />
            <transient />
        </item>
        <item id="electrostatics_displacement" name="Displacement" shortname="D" unit="C/m2" scalar="0">
            <steadystate planar_comp_x="- epsr * EPS0 * dx" planar_comp_y="- epsr * EPS0 * dy" axi_comp_r="- epsr * EPS0 * dx" axi_comp_z="- epsr * EPS0 * dy" />
            <harmonic />
            <transient />
        </item>
        <item id="electrostatics_energy_density" name="Energy density" shortname="we" unit="J/m3" scalar="1">
            <steadystate planar_scalar="0.5 * epsr * EPS0 * (dx * dx + dy * dy)" axi_scalar="0.5 * epsr * EPS0 * (dx * dx + dy * dy)" />
            <harmonic />
            <transient />
        </item>
        <item id="electrostatics_permittivity" name="Permittivity" shortname="eps" unit="-" scalar="1">
            <steadystate planar_scalar="epsr" axi_scalar="epsr" />
            <harmonic />
            <transient />
        </item>
        <item id="electrostatics_charge_density" name="Charge density" shortname="rho" unit="C/m3" scalar="1">
            <steadystate planar_scalar="rho" axi_scalar="rho" />
            <harmonic />
            <transient />
        </item>      
    </localvariable>

    <view>
        <scalarvariable>
            <steadystate default="electrostatics_potential">
                <item id="electrostatics_potential" />
                <item id="electrostatics_electric_field" />
                <item id="electrostatics_displacement" />
                <item id="electrostatics_energy_density" />
                <item id="electrostatics_permittivity" />
                <item id="electrostatics_charge_density" />
            </steadystate>
            <harmonic/>
            <transient/>
        </scalarvariable>

        <vectorvariable>
            <steadystate default="electrostatics_electric_field">
                <item id="electrostatics_electric_field" />
                <item id="electrostatics_displacement" />
            </steadystate>
            <harmonic/>
            <transient/>
        </vectorvariable>
    </view>
    
    <pointvalue>
        <steadystate>
            <item id="electrostatics_potential" />
            <item id="electrostatics_electric_field" />
            <item id="electrostatics_displacement" />
            <item id="electrostatics_energy_density" />
            <item id="electrostatics_permittivity" />
            <item id="electrostatics_charge_density" />            
        </steadystate>
        <harmonic/>
        <transient/>
    </pointvalue>  
    
    <volumeintegral>
        <item id="electrostatics_volume" name="Volume" shortname="V" unit="m3">
            <steadystate planar="1.0" axi="2.0 * PI * x" />
            <harmonic/>
            <transient/>
        </item>        
        <item id="electrostatics_surface" name="Cross section" shortname="S" unit="m2">
            <steadystate planar="1.0" axi="1.0" />
            <harmonic/>
            <transient/>
        </item>
        <item id="electrostatics_energy" name="Energy" shortname="We" unit="J">
            <steadystate planar="0.5 * epsr * EPS0 * (dx * dx + dy * dy)" axi="2.0 * PI * x * 0.5 * epsr * EPS0 * (dx * dx + dy * dy)" />
            <harmonic/>
            <transient/>
        </item>
    </volumeintegral>    
</module>
