<?xml version="1.0" encoding="utf-8"?>
<schema attributeFormDefault="unqualified" elementFormDefault="qualified" version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <element name="document" type="documentType" />
  <complexType name="documentType">
    <sequence>
      <element name="geometry" type="geometryType" />
      <element name="problem" type="problemType" />
    </sequence>
    <attribute name="version" type="string" />
  </complexType>
  <complexType name="problemType">
    <sequence>
      <element name="startupscript" type="string" />
      <element name="description" type="string" />
      <element name="fields" type="fieldsType" />
    </sequence>
    <attribute name="coordinatetype" type="string" />
    <attribute name="frequency" type="string" />
    <attribute name="matrix_solver" type="string" />
    <attribute name="timetotal" type="string" />
    <attribute name="meshtype" type="string" />
    <attribute name="timestep" type="string" />
    <attribute name="name" type="string" />
    <attribute name="date" type="string" />
  </complexType>
  <complexType name="fieldsType">
    <sequence>
      <element name="field" type="fieldType" />
    </sequence>
  </complexType>
  <complexType name="fieldType">
    <sequence>
      <element name="adaptivity" type="adaptivityType" />
      <element name="solver" type="solverType" />
      <element name="boundaries" type="boundariesType" />
      <element name="materials" type="materialsType" />
    </sequence>
    <attribute name="fieldid" type="string" />
    <attribute name="numberofrefinements" type="string" />
    <attribute name="analysistype" type="string" />
    <attribute name="polynomialorder" type="string" />
    <attribute name="weakforms" type="string" />
    <attribute name="initialcondition" type="string" />
  </complexType>
  <complexType name="materialsType">
    <sequence>
      <element name="material" type="materialType" />
    </sequence>
  </complexType>
  <complexType name="materialType">
    <sequence>
      <element name="label" type="labelType" />
    </sequence>
    <attribute name="id" type="string" />
    <attribute name="name" type="string" />
  </complexType>
  <complexType name="labelType">
    <attribute name="label" type="string" />
  </complexType>
  <complexType name="boundariesType">
    <sequence>
      <element name="boundary" type="boundaryType" />
    </sequence>
  </complexType>
  <complexType name="boundaryType">
    <sequence>
      <element name="edge" type="edgeType" />
    </sequence>
    <attribute name="type" type="string" />
    <attribute name="id" type="string" />
    <attribute name="name" type="string" />
  </complexType>
  <complexType name="edgeType">
    <attribute name="edge" type="string" />
  </complexType>
  <complexType name="solverType">
    <attribute name="nonlineartolerance" type="string" />
    <attribute name="nonlinearsteps" type="string" />
    <attribute name="linearity" type="string" />
  </complexType>
  <complexType name="adaptivityType">
    <attribute name="adaptivitytolerance" type="string" />
    <attribute name="adaptivitytype" type="string" />
    <attribute name="adaptivitysteps" type="string" />
  </complexType>
  <complexType name="geometryType">
    <sequence>
      <element name="nodes" type="nodesType" />
      <element name="edges" type="edgesType" />
      <element name="labels" type="labelsType" />
    </sequence>
  </complexType>
  <complexType name="labelsType">
    <sequence>
      <element name="label" type="labelType" />
    </sequence>
  </complexType>
  <complexType name="labelType">
    <attribute name="x" type="string" />
    <attribute name="y" type="string" />
    <attribute name="polynomialorder" type="string" />
    <attribute name="id" type="string" />
    <attribute name="area" type="string" />
  </complexType>
  <complexType name="edgesType">
    <sequence>
      <element name="edge" type="edgeType" />
    </sequence>
  </complexType>
  <complexType name="edgeType">
    <attribute name="end" type="string" />
    <attribute name="refine_towards" type="string" />
    <attribute name="id" type="string" />
    <attribute name="start" type="string" />
    <attribute name="angle" type="string" />
  </complexType>
  <complexType name="nodesType">
    <sequence>
      <element name="node" type="nodeType" />
    </sequence>
  </complexType>
  <complexType name="nodeType">
    <attribute name="x" type="string" />
    <attribute name="y" type="string" />
    <attribute name="id" type="string" />
  </complexType>
</schema>
