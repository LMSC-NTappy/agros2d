<?xml version="1.0"?>
<coupling xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="module.xsd">
    <general id ="current-heat" name="Joule losses">
        <description>Heat generated by Joule losses in current field</description>
        <modules>
            <source id="current" />
            <target id="heat" />
        </modules>
    </general>

    <volume>
        <weakforms>
            <weakform couplingtype="weak" sourceanalysis="steadystate"  targetanalysis="steadystate" >
                <vector i="1" j="1" planar="- gamma * (sourcedx * sourcedx + sourcedy * sourcedy) * vval"
                                    axi="- gamma * (sourcedr * sourcedr + sourcedz * sourcedz) * r * vval" />
            </weakform>

            <weakform couplingtype="hard" sourceanalysis="steadystate"  targetanalysis="steadystate" >
                <matrix i="2" j="1" planar ="gamma * (udx * udx + udy * udy) * vval"
                                    axi = "gamma * (udr * udr + udz * udz) * r * vval" />
                <vector i="2" j="1" planar ="- gamma * (updx * updx + updy * updy) * vval"
                                    axi = "- gamma * (updr * updr + updz * updz) * r * vval" />
            </weakform>

        </weakforms>
    </volume>
</coupling>
